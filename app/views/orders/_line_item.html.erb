<tr>
<h1 style="text-align: center">Your Order!</h1>
   <% @order.line_items.each do | item | %>
    <% product = Product.find(item.product_id) %>

    <h3 style="text-align: center"> Name: <%= product.name %> </h3>
    <p style="text-align: center"><img src="<%= product.image %>" /></p>

    <p> <b>Description:</b> <%= product.description %> </p>
    <p> <b>Quantity:</b> <%= item.quantity %> </p>
    <p> <b>Item Total:</b> <%= humanized_money_with_symbol item.item_price_cents / 100.0 %> </p>
  <% end %>

  <div style="text-align: center">
    <p> <b>Total:</b> <%= humanized_money_with_symbol @order.total_cents / 100.0 %> </p>
    <p> <b>Email:</b> <%= @order.email %> </p>
  </div>
    <br>
  </td>
</tr> 